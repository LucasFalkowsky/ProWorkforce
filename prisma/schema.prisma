// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
  binaryTargets = ["native", "linux-musl", "linux-arm64-openssl-1.1.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String @db.VarChar()
  email String @unique
  company String?
}

model Company {
  id String @id @default(uuid())
  name String @db.VarChar()
  datasource String? @db.VarChar()
}

model Employee {
  id String @id @default(uuid())
  firstname String @db.VarChar()
  lastname String @db.VarChar()
  workweek Int?
  company String? @db.VarChar()
}

model Team {
  id String @id @default(uuid())
  company String @db.VarChar()
  name String @db.VarChar()
}

model EmployeeTeam {
  id String @id @default(uuid())
  employee String @db.VarChar()
  team String @db.VarChar()
}

model Project {
  id String @id @default(uuid())
  name String @db.VarChar()
  customer String? @db.VarChar()
  company String @db.VarChar()
  description String? @db.VarChar()
  startdate DateTime?
  state State
}

model Phase {
  id String @id @default(uuid())
  name String @db.VarChar()
  project String @db.VarChar()
  is_active Boolean
  startdate DateTime?
  enddate DateTime?
  delay Int?
}

model EmployeeTimeframe {
  id String @id @default(uuid())
  employee String @db.VarChar()
  phase String @db.VarChar()
  startdate DateTime
  enddate DateTime
  workweek Int
}

enum State {
  DRAFT
  ONGOING
  COMPLETED
  ARCHIVED
}